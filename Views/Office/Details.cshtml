<br />
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h4 class="font-weight-bold float-left">Office Details</h4>
            <a href="@Url.Action("Delete", "Office", new {id = Model.ID})" class="btn btn-danger float-right" onclick="return confirm('Are you sure you want to delete this?')"><i class="fa fa-trash"></i>Delete Office</a>
            <a href="@Url.Action("Edit", "Office", new {id = Model.ID})" class="btn btn-info float-right btn-margins"><i class="fa fa-edit"></i>Edit Office</a>
            <a href="~/Office/" class="btn btn-secondary float-right btn-margins"><i class="fa fa-arrow-left"></i>Back to Office List</a>

        </div>
        <br />
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-sm-8 col-md-12">
                                <h5 style="font-weight: bold;">@Html.DisplayFor(model => model.Name)</h5>
                                @*<a class="btn btn-secondary float-right" asp-action="Index"><i class="fa fa-arrow-left"></i>Back to List</a>
                                    <a href="@Url.Action("Delete", "Office", new {id = Model.ID})" class="btn btn-danger float-right sub-btn" onclick="return confirm('Are you sure you want to delete this?')"><i class="fa fa-trash"></i>Delete</a>
                                    <a href="@Url.Action("Edit", "Office", new {id = Model.ID})" class="btn btn-info float-right sub-btn"><i class="fa fa-edit"></i>Edit</a>*@
                                @*@Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary float-right sub-btn " })*@
                                @*@Html.ActionLink("Delete", "Delete", new { id = Model.ID }, new { @class = "btn btn-danger float-right sub-btn" })*@

                            </div>
                        </div>
                    </div>


                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <div id="office-image">
                                    @{
                                        string imagepath = "/uploads/img/office/" + Model.ID + "/" + Model.Filename;
                                        if (Model.Filename == "")
                                        {
                                            <img src="~/images/error.png" />
                                        }
                                        else
                                        {
                                            <img src="@imagepath" />
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col">
                                <label class="control-label"> @Html.DisplayNameFor(model => model.Address):</label>
                                <input disabled value="@Html.DisplayFor(model => model.Address)" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label class="control-label">City</label>
                                <input disabled value="@Html.DisplayFor(model => model.CityName)" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label asp-for="Latitude" class="control-label"></label>
                                <input asp-for="Latitude" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label asp-for="Longitude" class="control-label"></label>
                                <input asp-for="Longitude" class="form-control" disabled />
                            </div>
                        </div>
                        <br />
                        <div class="row" hidden>
                            <div class="form-check">
                                <div class="col">
                                    <input asp-for="IsActive" type="checkbox" class="form-check-input" checked>
                                    <label asp-for="IsActive" class="form-check-label">IsActive</label>
                                </div>
                                <div class="col">
                                    <input asp-for="IsDeleted" type="checkbox" class="form-check-input" disabled>
                                    <label asp-for="IsDeleted" class="form-check-label">IsDeleted</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <h4 class="font-weight-bold float-left">Location</h4>
                    </div>
                    <div class="card-body">
                        <div id="map" class="details-map"></div>
                    </div>
                    <!--FLOOR-->
                    <div class="card-header">
                        <h4 class="font-weight-bold float-left">Floors</h4>
                        <button asp-action="AddFloor" class="btn btn-primary float-right" data-toggle="modal" data-target="#myModal">
                            Add Floor
                        </button>
                    </div>
                    <!-- The Modal -->
                    <div class="modal" id="myModal">
                        <div class="modal-dialog">
                            <div class="modal-content">

                                <!-- Modal Header -->
                                <div class="modal-header">
                                    <h4 class="modal-title">Add Floor Details</h4>
                                </div>

                                <!-- Modal body -->
                                <div class="modal-body">
                                    <div class="container-fluid">
                                        <div class="card">
