@model EpicOS.Models.Entities.Office
@{
    ViewData["Title"] = "Edit";
    var context = ViewBag.Context as EpicOS.Models.ViewModel.OfficeViewModel;
}
<div class="container-fluid">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h4 class="font-weight-bold float-left">Edit Office Details</h4>
                <button type="submit" class="btn btn-primary float-right"><i class="fa fa-save"></i> Update</button>
                <a href="~/Office/" class="btn btn-secondary float-right btn-margins"><i class="fa fa-arrow-left"></i>Back to Office List</a>
            </div>
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="row">
                            <div class="col">
                                <div class="card-body">
                                    @{
                                        string filepath = "/uploads/img/office/" + Model.ID + "/" + Model.Filename;
                                        <div class="row">
                                            <div class="col-12 col-sm-8 col-md-12">
                                                <div id="edit-image">
                                                    @if (Model.Filename == "")
                                                    {
                                                        <img class="card-img-top" src="~/images/error-default.jpg" />
                                                    }
                                                    else
                                                    {
                                                        <img src="@filepath" class="card-img-top" />
                                                    }
                                                    @*<input asp-for="Filename" type="text" class="form-control padding-file" hidden />*@
                                                    @*<input asp-for="Filename" type="file" class="form-control padding-file" />*@
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    <div class="row">
                                        <div class="col-12 col-sm-8 col-md-12">
                                            <label asp-for="Name" class="control-label"></label>
                                            <input asp-for="Name" class="form-control" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 col-sm-8 col-md-12">
                                            <label asp-for="Address" class="control-label"></label>
                                            <input asp-for="Address" class="form-control" />
                                            <span asp-validation-for="Address" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-12 col-sm-4 col-md-4 col-lg-12">
                                            <label asp-for="CityID" class="control-label">City</label>
                                            @Html.DropDownListFor(Model => Model.CityID, context.ListOfCities.OrderBy(x => x.Text), new { @class = "form-control" })
                                            @*<input asp-for="CityID" class="form-control" />*@
                                            <span asp-validation-for="CityID" class="text-danger"></span>
                                        </div>
                                        <div class="col-12 col-sm-6 col-md-4 col-lg-6">
                                            <label asp-for="Latitude" class="control-label"></label>
                                            <input asp-for="Latitude" class="form-control" />
                                            <span asp-validation-for="Latitude" class="text-danger"></span>
                                        </div>
                                        <div class="col-12 col-sm-6 col-md-4 col-lg-6">
                                            <label asp-for="Longitude" class="control-label"></label>
                                            <input asp-for="Longitude" class="form-control" />
                                            <span asp-validation-for="Longitude" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <!-- Modal for file upload-->
                                    <div class="modal fade" id="fileModal" role="dialog">
                                        <div class="modal-dialog">

                                            <!-- Modal content-->
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h4 class="modal-title">Upload New Photo</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="form-group">
                                                        <small class="font-italic" style="color: red;">*Select image and click done*</small>
                                                        <input type="file" name="file" id="Filename" onchange="updateList()" />
                                                        <input asp-for="Filename" type="text" class="form-control padding-file" hidden />
                                                        <img src="" id="profile-img-tag" />

                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-success" data-dismiss="modal">Done</button>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 col-sm-12 col-md-6 col-lg-2">
                                            <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#fileModal">Upload New Photo: </button>
                                        </div>
                                        <div class="col-12 col-sm-12 col-md-6 col-lg-9">
                                            <div id="fileList"></div>
                                        </div>
                                        <span asp-validation-for="Filename" class="text-danger"></span>
                                    </div>
                                    <div class="row" hidden>
                                        <div class="form-check">
                                            <div class="col">
                                                <input asp-for="IsActive" type="checkbox" class="form-check-input" checked>
                                                <label asp-for="IsActive" class="form-check-label">IsActive</label>
                                            </div>
                                            <div class="col">
                                                <input asp-for="IsDeleted" type="checkbox" class="form-check-input" disabled>
                                                <label asp-for="IsDeleted" class="form-check-label">IsDeleted</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-2 col-sm-2 col-md-6 col-lg-6">
                                <div id="map"></div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts
{
    <script>
        function updateList() {
            alert("File upload..");
            var input = document.getElementById('Filename');
            var output = document.getElementById('fileList');

            output.innerHTML = '<ul>';
            for (var i = 0; i < input.files.length; ++i) {
                output.innerHTML += '<li>' + input.files.item(i).name + '</li>';
            }
            output.innerHTML += '</ul>';
        }
    </script>
    <script src="~/js/viewimageonchange.js"></script>
    <script src="~/js/track.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDsyB1N3HPmTmg4aFJwPLv6uvqxEYtl9X8&callback=initMap" async defer></script>
}