@model EpicOS.Models.ViewModel.FloorViewModel
@{
    ViewData["Title"] = "Assign Device";
}

@section Styles
{
    <style>
        .item {
            position: absolute;
        }

        .drag {
            z-index: 999999;
        }
    </style>
}
<div class="container-fluid">
    <div class="card shadow">
        <div class="card-header">
            <h5 class="font-weight-bold float-left">@Model.Name Device Assignment</h5>
            <button type="submit" id="submit" class="btn btn-primary float-right"><i class="fa fa-save"></i> Save Assignment</button>
            <a href="~/Office/Details/@Model.OfficeID" class="btn btn-secondary float-right btn-margins"><i class="fa fa-arrow-left"></i>Back to Office Details</a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-8 col-md-10 col-lg-10">
                    <div class="card shadow">
                        <div class="card-body">
                            <div class="row" hidden>
                                <div class="form-group">
                                    @Html.HiddenFor(Model => Model.ID)
                                    <div class="col">
                                        <input asp-for="OfficeID" class="form-control" />
                                        <label asp-for="OfficeID" class="form-check-label">OfficeID</label>
                                    </div>
                                    <div class="col">
                                        <input asp-for="IsActive" type="checkbox" class="form-check-input" checked>
                                        <label asp-for="IsActive" class="form-check-label">IsActive</label>
                                    </div>
                                    <div class="col">
                                        <input asp-for="IsDeleted" type="checkbox" class="form-check-input" disabled>
                                        <label asp-for="IsDeleted" class="form-check-label">IsDeleted</label>
                                    </div>
                                </div>
                            </div>
                            <div id="frame" class="ui-droppable">

                                @if (!string.IsNullOrEmpty(Model.Filename))
                                {
                                <img src="~/uploads/img/office/@Model.OfficeID/floor/@Model.ID/@Model.Filename" class="card-img-top" />
                                }
                                else
                                {
                                <img src="~/images/error.png" />
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="card shadow">
                        <div class="card-header">
                            <h5 class="font-weight-bold">Work Tags</h5>
                        </div>
                        <div class="card-body">
                            <div id="options">
                                @foreach (var workpoint in Model.ListOfWorkpoints)
                                {
                                <div class="drag hub-a" id="@workpoint.ID">
                                    <small class="font-weight-bold">@workpoint.Name</small>
                                </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/jquery-3.4.1.js"></script>
<script src="~/js/assign-device.js"></script>